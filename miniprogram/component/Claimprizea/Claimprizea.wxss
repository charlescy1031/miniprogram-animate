/* component/Claimprize.wxss */
.button {
    color: rgba(0, 0, 0, 0.80);
    text-align: center;
    font-family: STHeiti;
    position: relative;
    overflow: hidden;
    background: #FFF;
    border-radius: 0px;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    display: flex;
    width: 130px;
    height: 44px;
    padding: 12px 33px;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
    background: linear-gradient(to right, #ec695c, #61c454) no-repeat right bottom;
    background-size: 0 2px;
    transition: background-size 1300ms;
}




.out {
    width: 130px;
    height: 44px;
    background: #ccc;
    position: relative;
    display: flex;
    align-items: center;
    flex-direction: column;
    overflow: hidden;
}

.in {
    margin: 1px;
    width: 128px;
    height: 42px;
    display: flex;
    flex-direction: row;
}

.prize_success {
    color: #fff;
    font-size: 14px;
    font-weight: 500;
    position: absolute;
    top: -44px;
    left: 0px;
    width: 130px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 44px;
    background: rgb(0, 47, 255);


}

.prize_success>image {
    margin-right: 10px;
}

.content {
    width: 128px;
    line-height: 44px;
    text-align: center;
}

.border-top {
    position: absolute;
    right: -130px;
    width: 130px;
    height: 1px;
    background: rgb(0, 140, 255);
}

.border-bottom {
    position: absolute;
    bottom: 0px;
    left: -130px;
    width: 130px;
    height: 1px;
    background: rgb(0, 140, 255);
}

.border-left {
    position: absolute;
    top: -44px;
    left: 0px;
    width: 1px;
    height: 44px;
    background: rgb(0, 140, 255);
}

.border-right {
    position: absolute;
    right: 0;
    bottom: -44px;
    width: 1px;
    height: 44px;
    background: rgb(0, 140, 255);
}